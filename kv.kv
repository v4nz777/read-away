                Color:
                    rgba: 1,1,1,0.3
                Rectangle:
                    size: self.size
                    source: 'underwater.png'
        
            BoxLayout:
                GridLayout:
                    cols: 7
                    id: consonants
            BoxLayout:
                size_hint_x: None
            BoxLayout:
                GridLayout:
                    cols: 5
                    id: vowels

        
