<TwoLetterWords>:
    blank_1: blank_1
    blank_2: blank_2
    consonants: consonants
    vowels: vowels
    GridLayout:
        rows: 3
        size_hint: 1,1
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                source: 'imgs/clouds.jpg'
        GridLayout:
            cols:3
            BoxLayout:
            BoxLayout: 
