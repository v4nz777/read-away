<IntroToAlphabets>:
    abctable: abc
    canvas.before:
        Rectangle:
            source: 'intro_bg.jpg'
            pos: self.pos
            size: self.size
    MDGridLayout:
        id: abc
        pos_hint: {"center_y": 0.4, "center_x": 0.5}
        cols: 7
        adaptive_size: True
        spacing: 5,5

<AlphabetGame>:
    drawing_canvas: drawing_canvas
    top_spacer: top_spacer
    elements_grid: elements_grid
    canvas.before:
        Rectangle:
            source: "sky.jpg"
            size: self.size
            pos: self.pos
        Color:
            rgba: 1,1,1,1
    MDLabel:
        text: "Alphabet Connecting Game"
        text_color: 0.5,0,0,0.5
        font_style: "H4"
        halign: "center"
        valign: "center"
        size_hint: 1,1
        font_name: 'ShadowsIntoLight-Regular.ttf'
    
    ScrollView:
        orientation: "horizontal"
        do_scroll_x: True
        do_scroll_y: False
        size_hint: 1,1
        always_overscroll: True
        scroll_distance: 100
        MDGridLayout:
            id: elements_grid
            rows: 4
            size_hint_x: None
            width: capital_letters.minimum_width
            MDWidget:
                id: top_spacer
            MDBoxLayout:
                id: capital_letters
                size_hint_y: None
            DrawingCanvas:
                id: drawing_canvas
                size_hint: 1,1     
            MDBoxLayout:
                id: small_letters
                size_hint_y: None


<PhaseOneTest>:
    the_alphabet: the_alphabet
    progress_bar: progress_bar
    microphone: mic_button
    speaker: speaker_button
    next_button: nxt_button
    
    GridLayout:
        rows: 5     
        GridLayout:
            cols:3
            BoxLayout:
            TheAlphabet:
                id: the_alphabet
                size: ltr_lbl.size
                disabled: True
                size_hint: None, None
                pos_hint: {'center_x': 0.5}
                Label:
                    font_name: 'ShadowsIntoLight-Regular.ttf'
                    id: ltr_lbl
                    text: ''
                    font_size: "100sp"
                    halign: 'center'
                    color: 0,0,.5,1
            BoxLayout:
        BoxLayout:
            size_hint_y: 0.3
        BoxLayout:
            MDProgressBar:
                id: progress_bar
                orientation: "horizontal"
                type: "determinate"
                value: 0
                size_hint_y: 0.03

        GridLayout:
            size_hint: 0.5, 0.5
            cols: 5
            BoxLayout:
                size_hint: 1,1
            MicButton:
                id: mic_button
                icon: "microphone"
                icon_color: 1,0,1,1
                on_press: 
                    root.validate()
            PBIconButton:
                id: speaker_button
                icon: "volume-high"
                on_release: 
                    root.listen_answer()
            PBIconButton:
                id: nxt_button
                icon: "arrow-right-bold"
                disabled: True
                on_release: 
                    root.show_letter()
            BoxLayout:
                size_hint: 1,1
        BoxLayout:
            


